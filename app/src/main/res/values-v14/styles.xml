<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>


    <style name="TextViewSpinnerDropDownItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewSpinnerDropDownItem_language" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/TRANSPARENT</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textDirection">locale</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerDropDownItem_language</item>
        <!-- Override the dropdown item in support library -->
        <item name="spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
    </style>

    <style name="mySpinnerItemStyle_language" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textDirection">locale</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <!-- Override the dropdown item in support library -->
        <item name="spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <array name="saed">
        <item>مخزن 1</item>
        <item>مخزن 2</item>
        <item>مخزن 3</item>
        <item>مخزن 4</item>
        <item>مخزن 5</item>
    </array>

    <array name="saed1">
        <item>مكان 1</item>
        <item>مكان 2</item>
        <item>مكان 3</item>
        <item>مكان 4</item>
        <item>مكان 5</item>
    </array>

    <array name="language">
        <item>@string/language</item>
        <item>العربية</item>
        <item>English</item>
    </array>
    <array name="scan_type">
        <item>@string/single</item>
        <item>@string/loop</item>
    </array>

</resources>
