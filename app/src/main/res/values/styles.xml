    <style name="TextViewSpinnerDropDownItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewSpinnerDropDownItem_language" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/TRANSPARENT</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textDirection">locale</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerDropDownItem_language</item>
        <!-- Override the dropdown item in support library -->
        <item name="spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
    </style>

    <style name="mySpinnerItemStyle_language" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
